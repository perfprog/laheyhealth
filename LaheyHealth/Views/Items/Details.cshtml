@model LaheyHealth.Models.Item

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_Admin_Section.cshtml";
}


@if (User.IsInRole("Admin"))
{
<h2>Details</h2>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Language)
        </dt>

        <dd>
            @try
            {
            @Html.DisplayFor(model => model.Language.LanguageName)
            }
            catch
            {
                <text>Null</text>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Scale)
        </dt>

        <dd>
            @try
            {
            @Html.DisplayFor(model => model.Scale.Name)
            }
            catch
            {
                <text>Null</text>
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Subscale)
        </dt>

        <dd>
            @try
            {
            @Html.DisplayFor(model => model.Subscale.Name)
            }
            catch
            {
                <text>Null</text>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
}
else {
    <h2>You need to be logged in as administrator to view this page</h2>
}