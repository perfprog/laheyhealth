@model IEnumerable<LaheyHealth.Models.Scale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin_Section.cshtml";
}



<h2>Scales:</h2>

@if (User.IsInRole("Admin")) { 
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @try
            {
                @Html.DisplayFor(modelItem => item.Language.LanguageName)
            }
            catch
            {
                <text>Null</text>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) 
        </td>
    </tr>
}

</table>
}
else{
<h2>You need to be logged in as administrator to view this page</h2>
}